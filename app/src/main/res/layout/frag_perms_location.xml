<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorRed"
            android:textSize="@dimen/_25sdp"
            android:textStyle="bold"
            android:text="Need your location"

            />

        <android.support.v7.widget.CardView
            android:id="@+id/imageHolder"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/_20sdp"
            app:cardBackgroundColor="@color/green"
            app:cardCornerRadius="@dimen/_500sdp"
            app:contentPadding="@dimen/_20sdp"></android.support.v7.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="We need your location permission to find restaurants and delivery men near you"
            android:textColor="#6e7faa"
            android:textSize="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:textStyle="normal"

            />

        <LinearLayout
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_margin="@dimen/_25sdp"
            android:layout_gravity="center_horizontal|center"
            android:orientation="horizontal">
            <android.support.v7.widget.AppCompatButton
                android:layout_width="@dimen/_180sdp"
                android:layout_weight="1"
                android:layout_margin="@dimen/_5sdp"
                android:layout_height="48dp"
                android:background="@drawable/bg_curved"
                android:text="Allow"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:backgroundTint="@color/green"
                />
            <android.support.v7.widget.AppCompatButton
                android:layout_width="@dimen/_180sdp"
                android:layout_margin="@dimen/_5sdp"
                android:layout_height="48dp"
                android:background="@drawable/bg_curved_top_right"
                android:text="SKIP"
                android:textStyle="bold"
                android:layout_weight="1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_margin="@dimen/_25sdp"
            android:layout_gravity="center_horizontal|center"
            android:orientation="horizontal">
            <android.support.v7.widget.AppCompatButton
                android:layout_width="@dimen/_180sdp"
                android:layout_weight="1"
                app:cornerRadius="@dimen/_10sdp"
                android:layout_margin="@dimen/_5sdp"
                android:layout_height="48dp"
                android:text="Allow"
                android:textStyle="bold"
                android:background="@drawable/bg_curved_radius"
                android:textColor="@color/white"
                />
            <android.support.v7.widget.AppCompatButton
                android:layout_width="@dimen/_180sdp"
                android:layout_margin="@dimen/_5sdp"
                android:layout_height="48dp"
                android:background="@drawable/bg_curved_radius"
                android:text="SKIP"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_weight="1"
                />
        </LinearLayout>



    </LinearLayout>


</RelativeLayout>
</android.support.constraint.ConstraintLayout>